
@model Registros;


@{
    ViewData["Title"] = "Login hour Page";
}
<div class="row">
        
    <h1>Registrar hora de ingreso</h1>
    <form asp-action="Ingreso" asp-controller="Empleado" method="post">

        <div class="col">
            <input asp-for="horaIngreso" class="form-control" />
            
            <button type="submit" class="btn btn-primary mt-5 btn-lg">Enviar hora de ingreso</button>
        </div>
       
    </form>
</div>
<a asp-controller="Empleado" asp-action="Index"> 
    <button class="btn btn-success" type="submit">volver</button>
</a>